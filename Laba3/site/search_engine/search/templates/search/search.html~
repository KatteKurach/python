    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function() {
                var jsontext = ''
                $('#btn').click(function() {
                    $.ajax({
                        url: 'search_results', 
                        type: 'get',
                        data: {text: $('#in').val()},
                        success: function(response) {
                            $('#sheet tr').remove()
                            for (var i = 0; i < response.urls.length; i++){
                                $('#sheet').find('tbody:last').append('<tr><td><a href="'+response.urls[i]+'" style="color: 644acb; font-family: Georgia; font-style: italic; font-size: 1.3em; ">'+response.urls[i]+'</a></td></tr>');
                              
                            }
                        }
                        })
                    })
                });
    </script>
